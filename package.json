{
  "name": "CRUD.js",
  "version": "1.0.0",
  "description": "A CRUD JavaScript class.",
  "main": "dist/CRUD.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/HugoGiraudel/CRUD.js.git"
  },
  "devDependencies": {
    "babel-eslint": "^4.1.3",
    "babelify": "^6.3.0",
    "npm-watch": "0.0.1",
    "standard": "^5.3.1",
    "uglify-js": "^2.5.0"
  },
  "watch": {
    "build": "src/*.js"
  },
  "scripts": {
    "build": "browserify src/CRUD.js -t [ babelify --optional es7.functionBind ] | tee dist/CRUD.js | uglifyjs --compress --mangle > dist/CRUD.min.js",
    "watch": "npm-watch",
    "lint": "standard"
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
