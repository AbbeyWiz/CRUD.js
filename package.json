{
  "name": "CRUD.js",
  "version": "1.0.0",
  "description": "A CRUD JavaScript class.",
  "main": "dist/CRUD.min.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/HugoGiraudel/CRUD.js.git"
  },
  "devDependencies": {
    "babelify": "^6.3.0",
    "http-server": "^0.8.4",
    "npm-watch": "0.0.1",
    "uglify-js": "^2.5.0"
  },
  "watch": {
    "build": "src/*.js"
  },
  "scripts": {
    "build": "browserify src/CRUD.js -t babelify --outfile dist/CRUD.js && uglifyjs dist/CRUD.js --compress --mangle --output dist/CRUD.min.js",
    "watch": "node_modules/http-server/bin/http-server ./ & npm-watch",
    "lint": "eslint src/*.js"
  }
}
